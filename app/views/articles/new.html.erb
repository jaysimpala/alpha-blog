<h1>Article Form</h1>

<%= form_for @article do |f| %>
    <%# <%= render 'layouts/error_messages', f: f.object %>
        
        <% if @article.errors.any? %>
            <ul>
            <% @article.errors.full_messages.each do |msg| %>
                <li>
                    <%= msg %>
                </li>
            <% end %>
            </ul>            
        <% end %>
        
        <p>
            <%= f.label :title %>
            <%= f.text_field :title %>
        </p>

        <p>
            <%= f.label :description %>
            <%= f.text_area :description %>
        </p>

        <p>
            <%= f.submit %>
        </p>

<% end %>


<p><%= link_to "Back to list articles", articles_path %></p>
